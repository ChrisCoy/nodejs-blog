<h2>Lista de Categorias</h2>
<hr />
<a href="/admin/categorias/add">
  <button class="btn btn-success">Nova Categoria</button>
</a>

{{#each categorias}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{nome}}</h4>
      <small>Slug: {{slug}}</small>
      <br />
      <small>Data de publicação: {{date}}</small>

      <br />
      <a href="/admin/categorias/edit/{{_id}}" style="text-decoration: none;">
        <button class="btn btn-success mt-4">Editar categoria</button>
      </a>
      <form action="/admin/categorias/remove" method="POST" style="display: inline-block;">
        <input type="hidden" name="id" value="{{_id}}" />
        <button type="submit" class="btn btn-danger mt-4">Deletar categoria</button>
      </form>
    </div>
  </div>
{{else}}
  <h4 class="mt-4">Nenhuma categoria registrada!</h4>
{{/each}}