<h2>Lista de postagens</h2>
<hr />
<a href="/admin/postagens/add">
  <button class="btn btn-success">Nova postagem</button>
</a>
{{#each postagens}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{titulo}}</h4>
      <p>Descrição: {{descricao}}</p>
      <small>Data: {{date}}</small>
      <br />
      <small>Categoria: <strong>{{categoria.nome}}</strong></small>

      <br />
      <a href="/admin/postagens/edit/{{_id}}" style="text-decoration: none;">
        <button class="btn btn-success mt-4">Editar post</button>
      </a>
      <form action="/admin/postagens/remove" method="POST" style="display: inline-block;">
        <input type="hidden" name="id" value="{{_id}}" />
        <button type="submit" class="btn btn-danger mt-4">Deletar post</button>
      </form>
    </div>
  </div>
{{else}}
  <h4>Nenhuma postagem registrada.</h4>
{{/each}}